#include <iostream>
using namespace std;


int tambah(int a, int b) {
    return a + b;
}

int kurang(int a, int b) {
    return a - b;
}

int kali(int a, int b) {
    return a * b;
}

int bagi(int a, int b) {
    if (b == 0) {
        cout << "Error: Tidak bisa membagi dengan 0!" << endl;
        return 0;
    }
    return a / b;
}

int main() {
    int pilihan;
    int a, b, hasil;

    cout << "=== KALKULATOR SEDERHANA ===" << endl;
    cout << "1. Tambah" << endl;
    cout << "2. Kurang" << endl;
    cout << "3. Kali" << endl;
    cout << "4. Bagi" << endl;
    cout << "Pilih operasi (1-4): ";
    cin >> pilihan;

    cout << "Masukkan angka pertama: ";
    cin >> a;
    cout << "Masukkan angka kedua: ";
    cin >> b;

    switch (pilihan) {
        case 1:
            hasil = tambah(a, b);
            break;
        case 2:
            hasil = kurang(a, b);
            break;
        case 3:
            hasil = kali(a, b);
            break;
        case 4:
            hasil = bagi(a, b);
            break;
        default:
            cout << "Pilihan tidak valid!" << endl;
            return 0;
    }

    cout << "Hasil: " << hasil << endl;

    return 0;
}
